@model IEnumerable<Arthesanatus.Domain.Entities.Revista>




<p>
    @Html.ActionLink( "Create New", "Create" )
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor( model => model.NumeroEdicao )
        </th>
        <th>
            @Html.DisplayNameFor( model => model.AnoEdicao )
        </th>
        <th>
            @Html.DisplayNameFor( model => model.MesEdicao )
        </th>
        <th>
            @Html.DisplayNameFor( model => model.Tema )
        </th>
        <th>
            @Html.DisplayNameFor( model => model.Foto )
        </th>
        <th></th>
    </tr>

    @foreach( var item in Model )
    {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.NumeroEdicao )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.AnoEdicao )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.MesEdicao )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Tema )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Foto )
            </td>
            <td>
                @Html.ActionLink( "Edit", "Edit", new { id = item.RevistaID } ) |
                @Html.ActionLink( "Details", "Details", new { id = item.RevistaID } ) |
                @Html.ActionLink( "Delete", "Delete", new { id = item.RevistaID } )
            </td>
        </tr>
    }

</table>

